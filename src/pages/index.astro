---
import SocialList from "@/components/SocialList";
import PostPreview from "@/components/blog/PostPreview";
import PageLayout from "@/layouts/Base";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const projects: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "Match Tile: Mini",
		desc: "A puzzle iOS game made with SwiftUI.",
		href: "https://apps.apple.com/es/app/match-tile-mini-puzzle-game/id6473903061?l=en-GB",
	},
	{
		title: "Cookie Empire",
		desc: "An idle clicker iOS game made with SwiftUI.",
		href: "/apps/cookie-empire",
	},
	{
		title: "Pizza Clicker",
		desc: "An idle iOS game made with react-native.",
		href: "https://apps.apple.com/au/app/idle-pizza-clicker/id1638610470",
	},
	{
		title: "Coffee Galley",
		desc: "Web App available in the Shopify App Store. Made with Shiny.",
		href: "https://apps.shopify.com/coffee-merchantr",
	},
	{
		title: "harrypotter",
		desc: "R library. Colour palettes inspired by Harry Potter.",
		href: "https://github.com/aljrico/harrypotter",
	},
	{
		title: "gameofthrones",
		desc: "R library. Colour palettes inspired by Game of Thrones.",
		href: "https://github.com/aljrico/gameofthrones",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<!--- <h1 class="title mb-6">Hello World!</h1> -->
		<p class="mb-4">Data Scientist / Sowftware Developer</p>
		<SocialList />
	</section>
	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Projects</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				projects.map(({ href, title, desc }) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<a
							href={href}
							target="_blank"
							rel="noopener noreferrer"
							class="min-w-[150px]"
						>
							<span class="cactus-link">{title}</span>
						</a>
						<p class="text-gray-500">{desc}</p>
					</li>
				))
			}
		</ul>
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
